package com.example.course_service.config;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.example.course_service.dto.CourseWithTeacher;

@FeignClient(name = "user-service", url = "http://localhost:1111/api/users")
public class UserServiceClient {


    @GetMapping("/{id}")
    CourseWithTeacher getUserById (@PathVariable("id") Long id);
}
