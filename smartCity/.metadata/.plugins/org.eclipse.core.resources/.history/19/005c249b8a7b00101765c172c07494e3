package com.smartcity.vehicletracking.kafka;

import org.apache.kafka.clients.admin.NewTopic;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class KafkaProducerConfig {
  @Bean
  public NewTopic vehiclePositionTopic() {
    return new NewTopic(KafkaTopics.VEHICLE_POSITION_V1, 3, (short)1);
  }
  @Bean
  public NewTopic delayDetectedTopic() {
    return new NewTopic(KafkaTopics.VEHICLE_DELAY_DETECTED_V1, 3, (short)1);
  }
}
